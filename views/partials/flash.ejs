<% if(success && success.length) { %>
<div
  class="alert alert-success alert-success-flash alert-dismissible fade show shadow"
  role="alert"
  id="successAlert"
>
  <i class="bi bi-check-circle me-2"></i>
  <strong>Success!</strong> <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if(error && error.length) {%>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
