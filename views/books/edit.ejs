<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/stylesheets/edit.css" />

<div class="row">
  <h1 class="text-center">Edit Book</h1>
  <div class="col-md-6 offset-md-3">
    <div class="card shadow">
      <div class="card-body">
        <form
          action="/books/<%= book._id %>?_method=PUT"
          method="POST"
          novalidate
          class="validated-form"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input
              class="form-control"
              type="text"
              id="title"
              name="book[title]"
              value="<%= book.title %>"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="author">Author</label>
            <input
              class="form-control"
              type="text"
              id="author"
              name="book[author]"
              value="<%= book.author %>"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea
              class="form-control"
              id="description"
              name="book[description]"
              required
            >
<%= book.description %></textarea
            >
          </div>
          <div class="mb-3">
            <label class="form-label" for="pages">Pages</label>
            <input
              class="form-control"
              type="number"
              id="pages"
              name="book[pages]"
              value="<%= book.pages %>"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="releaseDate">Release Date</label>
            <input
              class="form-control"
              type="number"
              id="releaseDate"
              name="book[releaseDate]"
              value="<%= book.releaseDate %>"
              required
            />
          </div>
          <div class="mt-3 mb-5">
            <label for="image" class="form-label">Add More Images</label>
            <input
              class="form-control"
              type="file"
              id="image"
              name="image"
              multiple
            />
          </div>
          <div class="mb-3 image-container">
            <% book.images.forEach(function(img, i) { %>
            <div class="image-wrapper">
              <img
                class="img-thumbnail"
                src="<%= img.thumbnail %>"
                alt="Book Image"
              />
              <div class="form-check-inline">
                <input
                  type="checkbox"
                  id="image-<%= i %>"
                  name="deleteImages[]"
                  value="<%= img.filename %>"
                />
                <label for="image-<%= i %>">Delete?</label>
              </div>
            </div>
            <% }) %>
          </div>
          <div class="mb-3">
            <button class="btn btn-info">Update Book</button>
          </div>
        </form>
        <a href="/books/<%= book._id %>" class="btn btn-secondary"
          >Back to Book</a
        >
      </div>
    </div>
  </div>
</div>
