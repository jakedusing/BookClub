<% layout("layouts/boilerplate")%>
<div class="row">
  <h1 class="text-center">Edit Book</h1>
  <div class="col-6 offset-3">
    <form action="/books/<%=book._id%>?_method=PUT" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="book[title]"
          value="<%=book.title%>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="author">Author</label>
        <input
          class="form-control"
          type="text"
          id="author"
          name="book[author]"
          value="<%=book.author%>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="book[image]"
          value="<%=book.image%>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          id="description"
          name="book[description]"
        >
<%= book.description %></textarea
        >
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update Book</button>
      </div>
    </form>
    <a href="/books/<%= book._id%>">Back to Book</a>
  </div>
</div>
