<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/stylesheets/new.css" />

<div class="row">
  <h1 class="text-center">New Book</h1>
  <div class="col-md-6 offset-md-3">
    <div class="card shadow">
      <div class="card-body">
        <form
          action="/books"
          method="POST"
          novalidate
          class="validated-form"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input
              class="form-control"
              type="text"
              id="title"
              name="book[title]"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="author">Author</label>
            <input
              class="form-control"
              type="text"
              id="author"
              name="book[author]"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea
              class="form-control"
              id="description"
              name="book[description]"
              required
            ></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label" for="pages">Number of Pages</label>
            <input
              class="form-control"
              type="number"
              id="pages"
              name="book[pages]"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="releaseDate">Release Date</label>
            <input
              class="form-control"
              type="number"
              id="releaseDate"
              name="book[releaseDate]"
              required
            />
          </div>
          <div class="mt-3 mb-5">
            <label for="image" class="form-label">Choose Images</label>
            <input
              class="form-control"
              type="file"
              id="image"
              name="image"
              multiple
            />
          </div>
          <div class="mb-3">
            <button class="btn btn-success">Add Book</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
