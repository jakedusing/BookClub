<% layout("layouts/boilerplate")%>
<div class="row">
  <h1 class="text-center">New Book</h1>
  <div class="col-6 offset-3">
    <form
      action="/books"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="book[title]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="author">Author</label>
        <input
          class="form-control"
          type="text"
          id="author"
          name="book[author]"
          required
        />
      </div>

      <!-- <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="book[image]"
          required
        />
      </div> -->
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="book[description]"
          required
        ></textarea>
      </div>
      <div class="mt-3 mb-5 custom-file">
        <label for="image" class="form-label">Choose Images</label>
        <input
          class="form-control"
          type="file"
          id="image"
          name="image"
          multiple
        />
        <label for="image" class="custom-file-label text-muted"></label>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Book</button>
      </div>
    </form>
    <a href="/books">All Books</a>
  </div>
</div>
